<project name="ukol3" basedir="." default="main">

    <property name="src.dir"     value="src"/>
    <property name="build.dir"   value="build"/>
	<property name="lib.dir"     value="lib"/>
	<property name="jar.dir"     value="${build.dir}/jar"/>
	
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="main-class"  value="ukol3.src.tests.Tests"/>
    

    <path id="classpath">
        <fileset dir="${lib.dir}" includes="**/*.jar"/>
    </path>
    <path id="application" location="${jar.dir}/${ant.project.name}.jar"/>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

    <target name="compile">
        <mkdir dir="${classes.dir}"/>
        <javac includeantruntime="false" srcdir="${src.dir}" destdir="${classes.dir}" classpath="${lib.dir}/junit-4.10.jar"/>
    </target>

    <target name="jar" >
        <mkdir dir="${jar.dir}"/>
        <jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
            <manifest>
                <attribute name="Main-Class" value="${main-class}"/>
            </manifest>
        </jar>
    </target>

    <target name="run" >
        <junit printsummary="yes" showoutput="true">
            <test name="${main-class}"/>
            <classpath>
                <pathelement location="${lib.dir}/junit-4.10.jar"/>
                <pathelement location="${classes.dir}"/>
            </classpath>

        </junit>
    </target>
    
    <target name="main" depends="clean,compile,run"/>
	
	<description>Builds, tests, and runs the project Queen.</description>

</project>
